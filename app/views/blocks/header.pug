// - header -> header-top -> header-content -> header-button -> responsive -> menu Javascript -> Slick Slider
header.header
	.container
		.header-top 
			a.header-logo Mogo
			i.fa.fa-bars.header-toggle
			ul.header-menu
				+menuLink("About")
				+menuLink("Service")
				+menuLink("Work")
				+menuLink("Blog")
				+menuLink("Contacts")
				li.header-menu-item 
					a.header-menu-icon(href="#")
						i.fa.fa-shopping-cart 
				li.header-menu-item 
					a.header-menu-icon(href="#")
						i.fa.fa-search
		.header-content 
			h2.header-content-caption Creative template 
			h1.header-content-main Welcome to mogo 
			a.header-content-more(href="#") Learn more
		.header-button
			+headerBottomItem("01", "Intro")
			+headerBottomItem("02", "Work")
			+headerBottomItem("03", "About")
			+headerBottomItem("04", "Contacts")
			