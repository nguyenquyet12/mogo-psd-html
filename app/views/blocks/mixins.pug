mixin menuLink(title, href = "#")
	li.header-menu-item
		a.header-menu-link(href= href)= title

mixin headerBottomItem(number, title)
	.header-button-item
		span.header-button-number= number
		span.header-button-text= title

mixin blockBox(caption, title, desc)
	.block-box
		h3.block-box-caption= caption 
		h2.block-box-heading= title 
		if desc 
			p.block-box-desc= desc

mixin aboutItem(src, title, iconClass, alt = "")
	.about-item 
		img.about-image(src=src, alt=alt)
		.about-content
			i.about-icon(class=iconClass)
			span.about-title=title

mixin numberItem(count, text)
	.number-item 
		h4.number-item-count=count
		span.number-item-text=text
mixin serviceItem(src, title, desc, alt="")
	.service-item 
		img.service-image(src=src, alt=alt)
		.service-info 
			.service-title=title 
			.service-desc=desc
mixin wedoItem(src, title, classIcon, content, alt="")
	.wedo-item
		.wedo-item-header
			img(src=src, alt=alt).wedo-item-icon
			h3.wedo-item-title=title 
			i.wedo-item-arrow(class=classIcon)
		.wedo-item-content
			.wedo-item-text=content
mixin teamSocial(facebook="#", twitter="#", pinterest="#", instagram="#")
	ul.team-social
		li.team-social-item
			a.team-social-link(href=facebook)
				i.fab.fa-facebook-f
		li.team-social-item
			a.team-social-link(href=twitter)
				i.fab.fa-twitter
		li.team-social-item
			a.team-social-link(href=pinterest)
				i.fab.fa-pinterest-p
		li.team-social-item
			a.team-social-link(href=instagram)
				i.fab.fa-instagram
mixin teamItem(src, name="", position="")
	.team-item 
		.team-main 
			img.team-image(src=src)
			.team-content 
				if block 
					block
		.team-info 
			h3.team-name=name
			span.team-position=position
mixin workItem(src="images/img-work1.png", icon="fa fa-home", title="Photographer Super", full="", desc="Lorem ipsum dolor sit")
	.work-item(class=full)
		img.work-image(src=src)
		.work-content
			i.fa.fa-home.work-icon
			h3.work-title=title
			span.work-desc=desc
mixin peopleItem(src, name, job, desc)
	li.people-item                 
		img.people-avatar(src=src)
		.people-info 
			h3.people-name=name
			span.people-job=job
			p.people-desc=desc
mixin storyItem(src, datenumber, datetext, title, views, comments, desc="Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus impedit non alias molestias rem! Cupiditate culpa. amet consectetur adipisicing elit. Minus impedit non alias molestias rem! Cupiditate culpa. amet consectetur adipisicing elit. Minus impedit non alias molestias rem! Cupiditate culpa.")
	li.story-item 
		.story-media 
			img.story-image(src=src)
			.story-date 
				span.story-date-number= datenumber
				span.story-date-text= datetext
		h3.story-title=title
		.story-desc 
			p.story-inner=desc
		.story-meta 
			.story-eye 
				i.fa.fa-eye.story-icon
				span.story-count=views
			.story-comment 
				i.fa.fa-comment.story-icon 
				span.story-count=comments
mixin quoteItem(src="images/img-quote.png", type="false",author="Jon Doe", desc="Ultrices eaque magnam interdum suspendisse eaque aute convallis? Proin tempus, sed pede, taciti lacinia magni, sociosqu facilisis leo? Laudantium eos, dolorem dignissim nec vehicula, laoreet pede nihil sint?")
	.quote-item
		if type=="false"
			.quote-icon
				img(src=src)
		else 
			img.quote-image(src=src)
		.quote-info 
			p.quote-desc=desc
			span.quote-author=author